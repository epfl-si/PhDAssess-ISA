{
  "compilerOptions": {
    "module": "Node16",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "moduleResolution": "Node16",
    "rootDir": "src",
    "outDir": "build",
    "incremental": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*", "tests/**/*.ts"],
  "exclude": ["node_modules"]
}
